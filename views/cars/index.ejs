<% layout('layout/boilerplate') %>
    <h1>All Cars</h1>
    <ul>
        <% for(let car of cars){ %>
        <div class="card mb-3">
            <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%= car.image %>" alt="">
            </div>
            <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= car.name %></h5>
                <h6 class="card-title">Seats: <%= car.seat %></h6>
                <h5 class="card-title">Gear: <%= car.gear %></h5>
                <h5 class="card-title">Type: <%= car.type %></h5>
                <a href="/cars/<%= car.id %>" class="btn btn-info">View</a>
            </div>
            </div>
        </div>
        </div>
        <% } %>
    </ul>