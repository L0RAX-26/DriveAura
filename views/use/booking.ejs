<% layout('layout/boilerplate') %>
<h1 class="text-center">Enter Booking Details</h1>
    <div class="col-6 offset-3">
    <form class="row g-3 validate-form" action="/users/cars/payment" method="POST" novalidate>
      <div class="mt-5 text-center">
        <span class="fw-bold" style="color:red"><%= car.name %></span>
      </div>
      <div>  
      <div class="mb-3">
          <label for="from" class="form-label">From</label>
          <input type="text" class="form-control" id="from" name="from" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
            <label for="to" class="form-label">To</label>
            <input type="text" class="form-control" id="to" name="to" required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
        <div class="mb-3">
            <label for="days" class="form-label">Number of Days</label>
            <input type="number" class="form-control" id="days" name="days" required>
            <div class="valid-feedback">
              Looks good!
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="price" class="form-label">Price(Per Day):</label>
            <input style="color: green" class="form-control fw-bold" type="number" id="price" name="price" value=<%= car.price %> readonly>
        </div>
        <div class="form-group mb-3">
          <label for="carPickupDate" class="form-label">Car Pickup Date:</label>
          <input class="form-control" type="Date" id="carPickupDate" name="carPickupDate">
      </div>
        <div class="col-12 text-center mb-3">
          <button type="submit" class="btn btn-primary">Proceed to Payment</button>
          <a class="btn btn-danger" href="/cars">Back</a>
        </div>
      </form>
    </div>